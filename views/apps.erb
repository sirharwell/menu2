<h1 class="center white-text"></h1>
<div class="row">
  <% @apps.each do |app| %>
    <div class="col s12 m12">
      <div class="card transparent">
        <div class="card-content white-text center">
          <span class="card-title"><%= app.title %></span>
          <p><%= app.description %></p>
        </div>
        <div class="card-action">
          <a class="btn left" href="/apps/<%= app.id %>/edit">Edit</a>
          <form action="/apps/<%= app.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE" />
            <button class="btn red right">Delete</button>
          </form>
        </div>
      </div>
    </div>
  <% end %>
</div>
